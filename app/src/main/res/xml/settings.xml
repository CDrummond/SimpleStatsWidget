<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SwitchPreference
        android:defaultValue="false"
        android:key="countReverse"
        android:title="@string/settings_countReverse" />

    <EditTextPreference
        android:defaultValue="100"
        android:enabled="false"
        android:inputType="number"
        android:key="callMax"
        android:summary="@string/settings_callMax_summary"
        android:title="@string/settings_callMax_title" />

    <EditTextPreference
        android:enabled="true"
        android:key="callIgnore"
        android:summary="@string/settings_callIgnore_summary"
        android:title="@string/settings_callIgnore_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="round"
        android:summary="@string/settings_minutes_summary"
        android:title="@string/settings_minutes_title" />

    <EditTextPreference
        android:defaultValue="100"
        android:enabled="false"
        android:inputType="number"
        android:key="smsMax"
        android:summary="@string/settings_smsMax_summary"
        android:title="@string/settings_smsMax_title" />

    <EditTextPreference
        android:enabled="true"
        android:key="smsIgnore"
        android:summary="@string/settings_smsIgnore_summary"
        android:title="@string/settings_smsIgnore_title" />

    <EditTextPreference
        android:defaultValue="160"
        android:inputType="number"
        android:key="smsCharCount"
        android:summary="@string/settings_sms_summary"
        android:title="@string/settings_sms_title" />

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number"
        android:key="startOfBillingPeriod"
        android:summary="@string/settings_start_of_billing_period_summary"
        android:title="@string/settings_start_of_billing_period_title" />
</PreferenceScreen>
